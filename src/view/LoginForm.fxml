   <children>
      <Label layoutX="88.0" layoutY="29.0" prefHeight="30.0" prefWidth="224.0" text="Login to To-Do List">
         <font>
            <Font name="Bell MT Bold" size="24.0" />
         </font>
      </Label>
      <Label layoutX="60.0" layoutY="104.0" text="User Name:">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Label layoutX="64.0" layoutY="179.0" text="Password:">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
